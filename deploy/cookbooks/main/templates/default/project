server {
    listen 8000;
    server_name media.yoyoyo;
    access_log  /var/log/nginx/rtdmedia.log;

    location / {
        expires 60m;
        root /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/media;
        add_header X-Deity <%= node.hostname %>;
    }
}

server {
    index index.html index.htm;
    listen 80;
    listen 8000 default;
    server_name  yoyoyo;
    access_log  /var/log/nginx/yoyoyo.log host;

    location /favicon.ico {
        root /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/media/images;
        break;
    }

    location /robots.txt {
        root /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/media;
        break;
    }

    location  ~* /yoyoyo/(.+)/en/(.+)/(.*) {
	alias /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/user_builds/$1/rtd-builds/$2/$3;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
        add_header X-Served Nginx;
        add_header X-Deity <%= node.hostname %>;
    }
    location  ~* /en/(.+)/(.*) {
        alias /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/user_builds/$domain/rtd-builds/$1/$2;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
        add_header X-Served Nginx;
        add_header X-Deity <%= node.hostname %>;
    }

    location  ~* /yoyoyo/(?P<yoyoyo>.+)/en/(?P<version>.+) {
        rewrite .* http://yoyoyo/yoyoyo/$yoyoyo/en/$version/;
    }


    location / {
        proxy_pass http://127.0.0.1:8888;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        add_header X-Deity <%= node.hostname %>;
    }
    location @fallback {
        proxy_pass http://127.0.0.1:8888;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        add_header X-Deity <%= node.hostname %>;
    }

    location /user_builds/ {
        internal;
        root   /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
    }
}

server {
    listen 80;
    listen 8000;
    server_name ~^(?P<domain>.+).yoyoyo;
    access_log  /var/log/nginx/yoyoyo.log host;

    location /favicon.ico {
        root /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/media/images;
        break;
    }

    location /robots.txt {
        root /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/media;
        break;
    }

    location  ~* /en/(.+)/(.*) {
        alias /home/yoyoyo/sites/yoyoyo/checkouts/yoyoyo/user_builds/$domain/rtd-builds/$1/$2;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
        add_header X-Served Nginx;
        add_header X-Deity <%= node.hostname %>;
    }
    location / {
	rewrite (.*) http://$domain.yoyoyo/en/latest/;
    }
    location @fallback {
        proxy_pass http://127.0.0.1:8888;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        add_header X-Deity <%= node.hostname %>;
    }
}

server {
    listen 8000;
    server_name www.yoyoyo.com yoyoyo.com www.yoyoyo;
    rewrite ^(.*) http://yoyoyo$1;
}
