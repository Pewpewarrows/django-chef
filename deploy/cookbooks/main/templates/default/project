server {
    listen 8000;
    server_name media.project;
    access_log  /var/log/nginx/rtdmedia.log;

    location / {
        expires 60m;
        root /home/project/sites/project/checkouts/project/media;
        add_header X-Deity <%= node.hostname %>;
    }
}

server {
    index index.html index.htm;
    listen 80;
    listen 8000 default;
    server_name  project;
    access_log  /var/log/nginx/project.log host;

    location /favicon.ico {
        root /home/project/sites/project/checkouts/project/media/images;
        break;
    }

    location /robots.txt {
        root /home/project/sites/project/checkouts/project/media;
        break;
    }

    location  ~* /project/(.+)/en/(.+)/(.*) {
	alias /home/project/sites/project/checkouts/project/user_builds/$1/rtd-builds/$2/$3;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
        add_header X-Served Nginx;
        add_header X-Deity <%= node.hostname %>;
    }
    location  ~* /en/(.+)/(.*) {
        alias /home/project/sites/project/checkouts/project/user_builds/$domain/rtd-builds/$1/$2;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
        add_header X-Served Nginx;
        add_header X-Deity <%= node.hostname %>;
    }

    location  ~* /project/(?P<project>.+)/en/(?P<version>.+) {
        rewrite .* http://project/project/$project/en/$version/;
    }


    location / {
        proxy_pass http://127.0.0.1:8888;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        add_header X-Deity <%= node.hostname %>;
    }
    location @fallback {
        proxy_pass http://127.0.0.1:8888;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        add_header X-Deity <%= node.hostname %>;
    }

    location /user_builds/ {
        internal;
        root   /home/project/sites/project/checkouts/project;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
    }
}

server {
    listen 80;
    listen 8000;
    server_name ~^(?P<domain>.+).project;
    access_log  /var/log/nginx/project.log host;

    location /favicon.ico {
        root /home/project/sites/project/checkouts/project/media/images;
        break;
    }

    location /robots.txt {
        root /home/project/sites/project/checkouts/project/media;
        break;
    }

    location  ~* /en/(.+)/(.*) {
        alias /home/project/sites/project/checkouts/project/user_builds/$domain/rtd-builds/$1/$2;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
        add_header X-Served Nginx;
        add_header X-Deity <%= node.hostname %>;
    }
    location / {
	rewrite (.*) http://$domain.project/en/latest/;
    }
    location @fallback {
        proxy_pass http://127.0.0.1:8888;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        add_header X-Deity <%= node.hostname %>;
    }
}

server {
    listen 8000;
    server_name www.project.com project.com www.project;
    rewrite ^(.*) http://project$1;
}
